@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "MasterPage.cshtml";
}
<div id="hri-content">
    <div class="row-fluid">

        <div class="span12">

            <div class="content">
                <div class="row-fluid">
                    <div class="span4 offset1">
                        <h2 class="page-title">Provider Directory</h2>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <span class="page-breadcrumbs"><em><a href="/member-center/index/">Home</a> › </em></span>
                        }
                        else
                        {
                            <span class="page-breadcrumbs"><em><a href="/">Home</a> › </em></span>
                        }
                        <span class="page-breadcrumbs breadcrumb-end"><em>Provider Directory</em></span>
                        <br><br>
                    </div>
                </div>
            </div>
            <div class="span8 offset2">
                <p>The information on this page applies to all Health Republic plans. All Health Republic plans are available both on and off the New York State of Health Marketplace.</p>
            </div><br><br>

            <iframe class="hri-iframe" width="100%" height="800" src="https://clm.magnacare.com/ProviderLocator/hr.aspx"></iframe>
            <div id="hosUgc" class="container-hospital-urgenctcare-list">
                <div class="hospital-urgentcare-list">

                    <div class="left">
                        @Umbraco.Field("hospitalList")
                    </div>


                    <div class="right">
                        @Umbraco.Field("urgentCareCenters")
                    </div>

                </div>
            </div>

        </div>
    </div>

</div>