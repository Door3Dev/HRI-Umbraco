                                            {
                                            <td>$@plan.Price</td> }
                                        </tr>
                                        <tr>
                                            <th>Deductible</th>
                                            @foreach (var plan in product.Plans)
                                            {
                                            <td>@plan.Description.Deductible</td> }
                                        </tr>
                                        <tr>
                                            <th>Coinsurance</th>
                                            @foreach (var plan in product.Plans)
                                            {
                                            <td>@plan.Description.Coinsurance</td> }
                                        </tr>
                                        <tr>
                                            <th>Out of Pocket Maximum</th>
                                            @foreach (var plan in product.Plans)
                                            {
                                            <td>@plan.Description.OutofPocketMaximum</td> }
                                        </tr>
