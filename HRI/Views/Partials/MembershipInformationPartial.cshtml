@{
    Layout = null;
}

@using HRI.Models

@model HRI.ViewModels.MembershipInformationViewModel


<script src="~/Scripts/jquery-1.9.1.js"></script>

@*Should go into Styles.css*@
<style>
    .hx-inline {
        display: inline;
        text-decoration: underline;
    }

    .border {
        border: none;
        margin: 15px;
    }


    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }
</style>


<div class="panel border">
    <div class="row-fluid">
        <div class="span5">
            <div class="row-fluid">
                <div class="span9 offset3" >
                    <h2>My Profile</h2>
                </div>
            </div>
        </div>
        <div class="span7">
            <div class="row-fluid">
                <div class="span12">
                    <br />
                    Your personal information is summarized below.<br />
                    If any of the information is not correct, please contact us at <h4>(888) 990-5702</h4>.
                </div>
            </div>
        </div>
    </div>

    @* Member and Contact Information main group row container*@
    <div class="row-fluid">
        <div class="span12">

            @* Member Profile*@
            <div class="row-fluid">
                <div class="span6">
                    <div class="row-fluid">
                        <div class="span10 offset2 text-left">
                            <h3 class="hx-inline">MEMBER PROFILE</h3>
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span4 offset2 text-left">
                            @Html.LabelFor(m => m.MemberId)
                        </div>
                        <div class="span6 text-left">
                            @Model.MemberId
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span4 offset2 text-left ">
                            @Html.Label("Name:")
                        </div>
                        <div class="span6 text-left">
                            @Model.MemberName
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span4  offset2 text-left ">
                            @Html.LabelFor(m => m.SSN)
                        </div>
                        <div class="span6 text-left">
                            @Model.SSN
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span4  offset2 text-left ">
                            @Html.LabelFor(m => m.EnrolledAs)
                        </div>
                        <div class="span6 text-left">
                            @Model.EnrolledAs
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span4  offset2 text-left ">
                            @Html.LabelFor(m => m.Gender)
                        </div>
                        <div class="span6 text-left">
                            @Model.Gender
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span4 offset2 text-left ">
                            @Html.LabelFor(m => m.DOB)
                        </div>
                        <div class="span6 text-left">
                            @Model.DOB.ToShortDateString()
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span4 offset2 text-left ">
                            @Html.LabelFor(m => m.MaritalStatus)
                        </div>
                        <div class="span6 text-left">
                            @Model.MaritalStatus
                        </div>
                    </div>
                </div>

                @* Contact information*@
                <div class="span6">
                    <div class="row-fluid">
                        <div class="span12 text-left">
                            <h3 class="hx-inline">CONTACT INFORMATION</h3>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span4 text-left ">
                            @Html.LabelFor(m => m.HomePhone)
                        </div>
                        <div class="span8 text-left">
                            @Model.HomePhone
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span4  text-left ">
                            @Html.LabelFor(m => m.MobilePhone)
                        </div>
                        <div class="span8 text-left">
                            @Model.MobilePhone
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span4 text-left ">
                            @Html.LabelFor(m => m.EmailAddress)
                        </div>
                        <div class="span8 text-left">
                            @Model.EmailAddress
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span4 text-left ">
                            @Html.LabelFor(m => m.CommPreference)
                        </div>
                        <div class="span8 text-left">
                            @Model.CommPreference
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />

    @* Plan Profile and Address Information main group row container*@
    <div class="row-fluid">
        <div class="span12">

            @* Plan Profile section*@
            <div class="row-fluid">
                <div class="span6">
                    <div class="row-fluid">
                        <div class="span10 offset2 text-left">
                            <h3 class="hx-inline">PLAN PROFILE</h3>
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span4 offset2 text-left ">
                            @Html.LabelFor(m => m.PlanName)
                        </div>
                        <div class="span6 text-left">
                            @Model.PlanName
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span4 offset2 text-left">
                            @Html.LabelFor(m => m.GroupName)
                        </div>
                        <div class="span6 text-left">
                            @Model.GroupName
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span4 offset2 text-left">
                            @Html.LabelFor(m => m.CoverageType)
                        </div>
                        <div class="span6 text-left">
                            @Model.CoverageType 
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span4 offset2 text-left">
                            @Html.LabelFor(m => m.ClaimStatus)
                        </div>
                        <div class="span6 text-left">
                            @Model.ClaimStatus
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span4 offset2 text-left">
                            @Html.LabelFor(m => m.CoverageStartDate)
                        </div>
                        <div class="span6 text-left">
                            @if (Model.CoverageStartDate.Year != 1900)
                            {
                                @Model.CoverageStartDate.ToString("MM/dd/yyyy")    
                            }
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span4 offset2 text-left">
                            @Html.LabelFor(m => m.MonthlyPremiumAmount)
                        </div>
                        <div class="span6 text-left">
                            @if (Model.MonthlyPremiumAmount != 0.0M)
                            {
                                @Model.MonthlyPremiumAmount.ToString("C")  
                            }
                        </div>
                    </div>
                </div>


                @* Address Information*@
                <div class="span6">
                    <div class="row-fluid">
                        <div class="span12  text-left">
                            <h3 class="hx-inline">ADDRESS INFORMATION</h3>
                        </div>
                    </div>

                    @* Mailing Address*@
                    <div class="row-fluid">
                        <div class="span2  text-left ">
                            @Html.Label("Mailing Address:")
                        </div>
                        <div class="span10 text-left">
                            @Model.MailingAddressLine1 <br />
                            @if (!string.IsNullOrEmpty(@Model.MailingAddressLine2))
                            {
                                @Model.MailingAddressLine2 <br />
                            }
                            @if (!string.IsNullOrEmpty(@Model.MailingAddressLine3))
                            {
                                @Model.MailingAddressLine3 <br />
                            }
                            @Model.MailingCity, @Model.MailingState @Model.MailingZipCode
                        </div>
                    </div>
                    <br />

                    @* Physical Address*@
                    <div class="row-fluid">
                        <div class="span2 text-left ">
                            @Html.Label("Physical Address:")
                        </div>

                        <div class="span10 text-left">
                            @Model.PhysicalAddressLine1 <br />
                            @if (!string.IsNullOrEmpty(@Model.PhysicalAddressLine2))
                            {
                                @Model.PhysicalAddressLine2  <br />
                            }
                            @if (!string.IsNullOrEmpty(@Model.PhysicalAddressLine3))
                            {
                                @Model.PhysicalAddressLine3 <br />
                            }
                            @Model.PhysicalCity, @Model.PhysicalState @Model.PhysicalZipCode
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <br />

@if (Model.SubscriberFlag == "Y")
{
    @*Dependents section*@
    <div class="row-fluid">
        <div class="span11 offset1 text-left" >
            <h3 class="hx-inline">DEPENDENTS</h3>
        </div>
    </div>


    <div class="row-fluid">

        @* Dependents*@
        <div id="MyDependents" class="panel-body collapse in margin-bottom">
            @if (Model.Dependents == null || Model.Dependents.Count == 0)
            {
                <div class="row-fluid">
                    <div class="span12 text-center">
                        <h3>No Dependents</h3>
                    </div>
                </div>
            }
            else
            {
                <div class="row-fluid">
                    <div class="span11 offset1">
                        <table style="width:90%">
                            <thead>
                                <tr class="text-left">
                                    <th>Name</th>
                                    <th>Relationship</th>
                                    <th>Date Of Birth</th>
                                    <th>Gender</th>
                                    <th>MemberId</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (DependentInformation dep in Model.Dependents)
                                {
                                    <tr class="text-left">
                                        <td>@dep.FirstName @dep.LastName</td>
                                        <td>@dep.Relationship</td>
                                        <td>@dep.DOB.ToShortDateString()</td>
                                        <td>@dep.Gender</td>
                                        <td>@dep.MemberId</td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            }
        </div>

    </div>
}


</div>

 

