@using HRI.Models
@using HRI.Services
@inherits UmbracoTemplatePage
@{
    // Grab a handle to the homepage
    var homePage = CurrentPage.AncestorsOrSelf(1).First();

    var menuService = new MenuService();
    var menu = menuService.ListItems(MenuType.Footer);
}
	
<div class="footer row">
  <div class="row-fluid contacts">
    <div class="span8 questions"><h5>Questions? ¿Preguntas? Llame 有問題嗎？請聯繫<br>Call @Html.Raw(homePage.phoneNumber)</h5></div>

    <div class="span4">
      <a href="@Html.Raw(homePage.facebookLink)" target="_blank">
        <img src="/images/icon_facebook.png" style="max-width: 15%">
      </a>&nbsp;&nbsp;&nbsp;&nbsp;
      <a href="@Html.Raw(homePage.twitterLink)" target="_blank">
        <img src="/images/icon_twitter.png" style="max-width: 15%">
      </a>&nbsp;&nbsp;&nbsp;&nbsp;
      <a href="@Html.Raw(homePage.linkedInLink)" target="_blank">
          <img src="/images/icon_linkedin.png" style="max-width: 15%">
      </a>&nbsp;&nbsp;&nbsp;&nbsp;
      <a href="@Html.Raw(homePage.youtubeLink)" target="_blank">
          <img src="/images/icon_youtube.png" style="max-width: 15%">
      </a>
    </div>
  </div>
    <div class="row-fluid nav">
        @foreach (var item in menu)
        {
            <div>
                <ul>
                    <li>@Html.Raw(item.Label)</li>
                    @if (item.Items.Count > 0)
                    {
                        
                        foreach (var subpage in item.Items)
                        {
                            var target = subpage.ShouldOpenInTheNewTab ? "_blank" : "";
                            var url = subpage.LinkType == "ExternalFile" ? subpage.FileUrl : subpage.Url;
                            <li><a href="@url" target="@target">@Html.Raw(subpage.Label)</a></li>
                        }
                    }
                </ul>
            </div>
        }
    </div> 
  <div class="row-fluid disclaimer">
    <p>
        Health Republic Insurance of New York, Corp. HRINY is a 501(c)(29) tax-exempt corporation, 
	licensed under Article 43 of the New York Insurance Law. This website is provided for informational purposes only, 
	and is not a solicitation or an offering to provide insurance. 
	HRINY is open for enrollment both on and off the New York State Health Benefit Exchange.  
    </p>

    <p class="terms">
      <a target="_blank" href="/media/1029/ny-privacypolicy.pdf">
        Privacy
        Policy
      </a>|<a target="_blank" href="/media/1028/ny-termsofuse.pdf">
        Terms of
        Use
      </a>
    </p>

  </div>
</div>