@inherits Umbraco.Web.Mvc.UmbracoTemplatePage

@{
    // Grab a handle to the homepage
    var homePage = CurrentPage.AncestorsOrSelf(1).First();

    // The menu items we want are all of the children of the homepage unless marked hidden
    var menuItems = homePage.Children.Where("HideFromNavigation == false");      

}
	
<div class="footer row">
  <div class="row-fluid contacts">
    <div class="span8 questions"><h5>Questions? ¿Preguntas? Llame 有問題嗎？叫<br>Call 888.990.5702</h5></div>

    <div class="span4">
      <a href="https://www.facebook.com/HealthRepublicNY" target="_blank">
        <img src="/images/icon_facebook.png"
             style="max-width: 15%">
      </a>&nbsp;&nbsp;&nbsp;&nbsp;
      <a href="https://twitter.com/HRI_NY" target="_blank">
        <img src="/images/icon_twitter.png"
             style="max-width: 15%">
      </a>&nbsp;&nbsp;&nbsp;&nbsp;
      <a href="http://www.linkedin.com/company/health-republic-insurance-of-new-york"
         target="_blank">
        <img src="/images/icon_linkedin.png"
             style="max-width: 15%">
      </a>
    </div>
  </div>
  <div class="row-fluid nav">												 
	@foreach (var item in menuItems.Where("visibleTo!=10").Where("visibleIn!=12"))
    {
		<div>
			<ul>
				<li>@Html.Raw(item.menuItemName)</li>								
				@if(item.Children.Where("HideFromNavigation==false").Count() > 0)
				{
					foreach (var subpage in item.Children.Where("HideFromNavigation==false"))
                	{
						if(subpage.NodeTypeAlias == "ExternalFile")
						{
							<li><a href="@subpage.file" target="_blank">@Html.Raw(subpage.menuItemName)</a></li>
						}
						else
						{
                			<li><a href="@subpage.Url">@Html.Raw(subpage.menuItemName)</a></li>
						}
                	}
				}
				else
				{
					<li><a href="@item.Children.First().Url">@Html.Raw(@item.Children.First().menuItemName)</a></li>
				}
			</ul>
		</div>
	}     
  </div>
	  
  @* THIS IS A TEMP SOLUTION TO SHOW ALL ITEMS REGARDLESS OF LOGIN STATE*@	  
  <div class="row-fluid nav">
	@foreach (var item in menuItems.Where("visibleTo!=9").Where("visibleIn!=12"))
    {
		<div>
			<ul>
				<li>@Html.Raw(item.menuItemName)</li>								
				@if(item.Children.Where("HideFromNavigation==false").Count() > 0)
				{
					foreach (var subpage in item.Children.Where("HideFromNavigation==false"))
                	{
                		<li><a href="@subpage.Url">@Html.Raw(subpage.menuItemName)</a></li>
                	}
				}
				else
				{
					<li><a href="@item.Children.First().Url">@Html.Raw(@item.Children.First().menuItemName)</a></li>
				}
			</ul>
		</div>
	}       
  </div>	  
	  
